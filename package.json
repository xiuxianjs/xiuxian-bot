    "@alemonjs/qq": "^0.0.6",
    "@alemonjs/qq-group-bot": "^0.0.6",
    "@alemonjs/qq-guild-bot": "^0.0.5",
    "@alemonjs/telegram": "^0.0.3",
    "alemonjs": "2.0.0-rc.50",
    "bullmq": "^4.12.7",
    "classnames": "^2.5.1",
    "dotenv": "^16.4.5",
    "ioredis": "^5.3.2",
    "jsxp": "1.0.4",
    "moment": "^2.30.1",
