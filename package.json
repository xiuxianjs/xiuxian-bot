    "delete": "pm2 delete pm2.config.cjs",
    "eslint": "eslint src --fix",
    "format": "prettier --write .",
    "check-format": "git diff --exit-code",
    "prepare": "husky"
  },
  "dependencies": {
    "@alemonjs/discord": "^0.0.5",
