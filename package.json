{
  "name": "xiuxian-bot",
  "version": "1.0.0",
  "author": "ningmengchongshui",
  "license": "MIT",
  "description": "修仙",
  "scripts": {
    "build": "lerna run build",
    "dev": "yarn --cwd packages/xiuxian dev",
    "view": "yarn --cwd packages/xiuxian view",
    "start": "yarn --cwd packages/xiuxian start",
    "stop": "yarn --cwd packages/xiuxian stop",
    "delete": "yarn --cwd packages/xiuxian delete",
    "eslint": "yarn --cwd packages/xiuxian eslint",
    "format": "prettier --write .",
    "check-format": "git diff --exit-code",
    "prepare": "husky"
  },
  "devDependencies": {
    "lerna": "^8.1.9",
    "prettier": "^3.3.3",
    "husky": "^9.0.11"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}
